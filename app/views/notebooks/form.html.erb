<%= form_with model: notebook,
              url: notebooks_path,
              data: { turbo_frame: "modal" },
              local: false do |f| %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true %>
    <% if notebook.errors[:name].any? %>
      <div class="field-error"><%= notebook.errors.full_messages_for(:name).join(", ") %></div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= f.submit "Create", class: "button" %>
    <%= link_to "Cancel", "#", class: "button--ghost", data: { action: "modal#close" } %>
  </div>
<% end %>
