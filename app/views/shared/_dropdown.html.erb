<%
  position = local_assigns[:position] || "bottom-right"
  close_on_click_outside = local_assigns[:close_on_click_outside] != false
  close_on_item_click = local_assigns[:close_on_item_click] != false
%>

<div class="dropdown" 
     data-controller="dropdown"
     data-dropdown-position-value="<%= position %>"
     data-dropdown-close-on-click-outside-value="<%= close_on_click_outside %>"
     data-dropdown-close-on-item-click-value="<%= close_on_item_click %>">
  
  <div data-dropdown-target="trigger" data-action="click->dropdown#toggle" class="dropdown__trigger">
    <%= yield :trigger %>
  </div>
  
  <div class="dropdown__menu" 
       data-dropdown-target="menu"
       data-position="<%= position %>">
    <%= yield %>
  </div>
</div> 